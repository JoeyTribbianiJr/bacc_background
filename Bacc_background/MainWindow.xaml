									<ColumnDefinition />
									<ColumnDefinition />
									<ColumnDefinition />
									<ColumnDefinition />
									<ColumnDefinition />
									<ColumnDefinition />
									<ColumnDefinition />
									<ColumnDefinition />
									<ColumnDefinition />
								</Grid.ColumnDefinitions>
                                <!--<Button Click="BigWaybillBlockClick" Style="{StaticResource BigWaybillButton}" DataContext="{Binding Waybill[0].WinnerSide}"></Button>-->
							</Grid>
						</StackPanel>

						<StackPanel Grid.Column="2" Grid.Row="1">
							<StackPanel.Resources>
								<Style TargetType="Button" BasedOn="{StaticResource GoodButton}">
									<Setter Property="Margin" Value="0,10,0,0"></Setter>
				<Setter Property="MinHeight" Value="22"></Setter>
								</Style>
							</StackPanel.Resources>
							<Button  Name="btnGeneralBillway" 
									 Margin="0,5,0,0"
									HorizontalAlignment="Center"
									 Click="btnGeneralBillway_Click">生成路单</Button>
							<Button  Name="btnImportBillway" 
									 HorizontalAlignment="Center"
									 Click="btnImportBillway_Click">导入路单</Button>
							<Button  Name="btnInsertBillway" 
									 HorizontalAlignment="Center"
									 Click="btnInsertBillway_Click">插入路单</Button>
							<Button  Name="btnReplcBillway" 
									 HorizontalAlignment="Center"
									 Click="btnReplcBillway_Click">替换路单</Button>
							<Button  Name="btnSaveBillway" 
									 HorizontalAlignment="Center"
									 Click="btnSaveBillway_Click">保存路单</Button>
						</StackPanel>

						<StackPanel Grid.Row="2" Grid.Column="0" Name="spPageButtons"
									Orientation="Horizontal"
									Grid.ColumnSpan="3">
                            <Button Name="Homepage" IsEnabled="{Binding LocalSessionIndex}" Click="Homepage_Click" Width="45">首页</Button>
                            <Button Name="Prepage" IsEnabled="{Binding LocalSessionIndex}" Click="Prepage_Click" Width="45">上一页</Button>
							<Button Name="Jumpto" Click="Jumpto_Click" Width="45" Margin="10,0,3,0">跳到</Button>
                            <TextBox Name="txtPageIndex" Text="{Binding localSessionStrIndex,Mode=OneWay}" Width="35" Height="20"></TextBox>
							<TextBlock VerticalAlignment="Center" Margin="3,0,0,0">页</TextBlock>
                            <Button Name="btnNextpage" IsEnabled="{Binding LocalSessionIndex,Converter={StaticResource NextPageButtonEnableConverter}}" Click="btnNextpage_Click" Width="45" Margin="5,0,0,0">下一页</Button>
                            <Button Name="btnLastpage" IsEnabled="{Binding LocalSessionIndex,Converter={StaticResource NextPageButtonEnableConverter}}" Click="btnLastpage_Click" Width="45">尾页</Button>
							<Button Name="btnImportFrontWaybill" Click="btnImportFrontWaybill_Click" 
									Margin="10,0,0,0"
									Width="85"  >导入前台路单</Button>
						</StackPanel>
					</Grid>
